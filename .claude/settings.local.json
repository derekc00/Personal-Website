{
  "permissions": {
    "allow": [
      "Bash(git worktree:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "mcp__linear__get_issue",
      "mcp__linear__list_issues",
      "Bash(git checkout:*)",
      "Bash(git pull:*)",
      "Bash(claude mcp add:*)",
      "Bash(rm:*)",
      "Bash(npm run build:*)",
      "Bash(npm run lint)",
      "Bash(git add:*)",
      "Bash(git reset:*)",
      "Bash(git commit:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git fetch:*)",
      "Bash(npm run:*)",
      "Bash(git merge:*)",
      "Bash(cp:*)",
      "Bash(git merge:*)",
      "Bash(mkdir:*)",
      "Bash(git rm:*)",
      "Bash(curl:*)",
      "mcp__linear__create_issue",
      "Bash(mv:*)",
      "Bash(npm install:*)",
      "Bash(npm install)",
      "Bash(true)"
    ],
    "deny": []
  },
  "enabledMcpjsonServers": [
    "supabase",
    "notionApi",
    "linear",
    "Context7"
  ],
  "hooks": {
    "afterBashCommand": [
      {
        "pattern": "git worktree add ../my-website-der-*",
        "command": "cd ../my-website-der-* && npm install && cp ../root-project/.env* . 2>/dev/null || true"
      }
    ]
  }
}